# see http://editorconfig.org/ for docs on this file

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf          ; standardize all os's including windows on lf by default
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# trailing whitespace is significant in markdown (bad choice, bad!)
[*.{md,markdown}]
trim_trailing_whitespace = false
indent_size = 2

[*.go]
indent_style = tab        ; https://github.com/golang/go/commit/014f3dcc837cb6789076cff4fccaa3bd221f823e
